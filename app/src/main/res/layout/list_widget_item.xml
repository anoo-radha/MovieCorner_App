<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/small_margin"
    android:paddingRight="@dimen/small_margin"
    android:background="@drawable/touch_selector_white" >
    <TextView
        android:id="@+id/widget_movie_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textSize="18sp"
        tools:text="Finding Nemo"
        android:layout_weight="2"
        android:textColor="@color/primary_text"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"/>
    <LinearLayout
        android:id="@+id/widget_vertical_white_bar"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:background="@color/divider"
        android:orientation="vertical" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="end"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widget_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="comedy, action, crime"
            android:textColor="@color/secondary_text"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp" />
        <LinearLayout
            android:id="@+id/widget_horizontal_white_bar"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:background="@color/divider"
            android:orientation="horizontal" >
        </LinearLayout>
        <TextView
            android:id="@+id/widget_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1 hr 30 m"
            android:paddingEnd="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:paddingStart="@dimen/small_margin"
            android:textColor="@color/secondary_text"/>
    </LinearLayout>
</LinearLayout>