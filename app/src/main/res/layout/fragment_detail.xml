<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anuradha.moviewatch.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgd"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            tools:text="@string/default_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/fab_margin">

            <ImageView
                android:id="@+id/poster_imgview"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                android:paddingBottom="@dimen/fab_margin"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin"
                android:paddingTop="@dimen/fab_margin"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/releasedt_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="@string/default_release_date" />

                <TextView
                    android:id="@+id/rating_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:text="@string/default_rating" />

                <Button
                    android:id="@+id/favorite_button"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/favorite_black_border"
                    android:drawableStart="@drawable/favorite_black_border"
                    android:text="@string/favorite_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/synopsis_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:textSize="14sp"
            tools:text="@string/default_synopsis" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/trailer_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="@string/trailers_header"
            android:textSize="20sp" />

        <com.anuradha.moviewatch.NonScrollableListView
            android:id="@+id/trailers_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/reviews_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:background="@color/accent"
            android:text="@string/reviews_header" />

        <TextView
            android:id="@+id/review_unavailable_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:text="@string/reviews_empty"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.anuradha.moviewatch.NonScrollableListView
            android:id="@+id/reviews_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
